
alias mc='/usr/share/mc/bin/mc-wrapper.sh'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls --color=auto'
  alias dir='dir --color=auto'
  alias vdir='vdir --color=auto'
  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
  alias less='less -R'
  alias xclip='xclip -selection clip'
fi

# some more ls aliases
alias ll='ls -l'
alias la='ls -lAh'
alias l='ls -CF'
# activated git aliases
alias gital='alias | grep git | less && git al'
# git aliases of prezto (not active)
alias gitalp='cat ~/dotfiles/zprezto/modules/git/alias.md | less'


#alias ssh='ssh -Y'
alias rm='rm -I'
alias watch='watch -d'
## hash'd dirs
[ -d "/home/$USER/bin" ] && hash -d mybin=/home/$USER/bin
hash -d dot=~/dotfiles
[ -d "/home/dennis/owncloud_maw" ] && hash -d ocm=/home/dennis/owncloud_maw
[ -d "/home/dennis/owncloud_maw/Mag/kollektivistisch" ] && hash -d koll=/home/dennis/owncloud_maw/Mag/kollektivistisch

alias zshreload=". ~/.zshrc ~/.zpreztorc"
alias zshconfig="vi ~/.vimrc ~/.tmux.conf ~/.zpreztorc ~/dotfiles/alias ~/.zprofile ~/.zshenv ~/.zshrc ~/.vimperatorrc"

# programs
## pacpl
[ -f /usr/bin/pacpl ] &&  alias pacpl_std="pacpl --to mp3 -v --bitrate 190 --delete"
alias tmux="tmux -2"
alias lpstat='lpstat -p -d'

cmkdir() {
    if [[ $1 == -* ]]; then
        mkdir $1 $2
        cd $2
    else
        mkdir $1
        cd $1
    fi
}

