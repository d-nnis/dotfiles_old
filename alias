
alias mc='/usr/share/mc/bin/mc-wrapper.sh'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls --color=auto'
  alias dir='dir --color=auto'
  alias vdir='vdir --color=auto'
  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
  alias less='less -R'
  alias xclip='xclip -selection clip'
fi

# some more ls aliases
alias ll='ls -l'
alias la='ls -lAh'
alias lla='la -t | head -n21' # show 20 of (la)test files (mtime), descending order
alias l='ls -CF'
# activated git aliases
alias gital='alias | grep git | less && git al'
# git aliases of prezto (not active)
alias gitalp='cat ~/dotfiles/zprezto/modules/git/alias.md | less'


#alias ssh='ssh -Y'
alias rm='rm -I'
alias watch='watch -d'
## hash'd dirs
[ -d "/home/$USER/bin" ] && hash -d mybin=/home/$USER/bin
hash -d dot=~/dotfiles
[ -d "/home/dennis/owncloud_maw" ] && hash -d ocm=/home/dennis/owncloud_maw
[ -d "/home/dennis/owncloud_maw/Mag/kollektivistisch" ] && hash -d koll=/home/dennis/owncloud_maw/Mag/kollektivistisch

alias confed=configedit
alias configedit="vi ~/.vimrc ~/.tmux.conf ~/.zpreztorc ~/dotfiles/alias ~/.zprofile ~/.zshenv ~/.zshrc ~/.vimperatorrc ~/.Xmodmap ~/.Xresources"
alias confrel=configreload
configreload() {
  echo "Reloading..."
  echo "ZSH & Prezto"
  . ~/.zshrc
  . ~/.zpreztorc
  echo "Xresources"
  xrdb ~/.Xresources
  if [ "$1" = "-a" ];then
    echo "Xmodmap"
    xmodmap ~/.Xmodmap
    echo "fonts"
    fc-cache -v ~/.fonts
  else
    echo "Not reloaded: Xmodmap, fonts (do so with '-a')"
  fi
  echo "Done."
}

# programs
[ -f /usr/bin/pacpl ] &&  alias pacpl_std="pacpl --to mp3 -v --bitrate 190 --delete"
alias tmux="tmux -2"
alias lpstat='lpstat -t'
alias aptup='sudo apt update && sudo apt upgrade'
alias getclip='echo "$(xsel)"'
#alias hardcopy='man -t multitail | lpr -m'


